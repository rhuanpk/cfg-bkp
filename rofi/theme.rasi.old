* {
    background-color:	Black;
    border-color:	White;
    text-color:		White;
    font:		"Liberation Mono 9";
}
window {
    anchor:	north;
    location:	north;
    width:	100%;
    padding:	4px;
    children:	[ horibox ];
}
horibox {
    orientation:	horizontal;
    children:		[ prompt, entry, listview ];
}
listview {
    layout:	horizontal;
    spacing:	5px;
}
entry {
    expand:	false;
    width:	10em;
}
element {
    padding:	0px 2px;
}
element selected {
    background-color:	#14636a;
}

element-text, element-icon {
  background-color:	inherit;
  text-color:		inherit;
}
